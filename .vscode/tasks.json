{
	"version": "2.0.0",
	"runner": "terminal",
	"type": "shell",
	"echoCommand": true,
	"presentation": {
		"reveal": "always"
	},
	"tasks": [
		{
			"label": "g++.exe build active file",
			"command": "g++",
			"args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		
		{
			"label": "Run",
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}